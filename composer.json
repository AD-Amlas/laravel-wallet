{
  "name": "bavix/laravel-wallet",
  "description": "Easy work with virtual wallet.",
  "keywords": [
    "laravel",
    "credits",
    "bavix",
    "currency",
    "laravel-wallet",
    "laravel-package",
    "virtual",
    "wallet",
    "payments"
  ],
  "minimum-stability": "stable",
  "homepage": "https://bavix.github.io/laravel-wallet/",
  "license": "MIT",
  "authors": [
    {
      "name": "Babichev Maxim",
      "email": "info@babichev.net"
    }
  ],
  "require": {
    "ext-pdo": "*",
    "php": "^7.3|^8.0",
    "illuminate/database": "^6.0|^7.0|^8.0",
    "doctrine/dbal": "^2.8|^3.0",
    "ramsey/uuid": "^3.0|^4.0",
    "brick/math": "^0.9"
  },
  "require-dev": {
    "infection/infection": "0.17.*",
    "laravel/cashier": "^12.0",
    "orchestra/testbench": "^6.0",
    "phpmetrics/phpmetrics": "^2.7",
    "phpstan/phpstan": "^0.12",
    "phpunit/phpunit": "^9.0",
    "vimeo/psalm": "^3.16",
    "psalm/plugin-laravel": "dev-master"
  },
  "suggest": {
    "ext-bcmath": "Used for accurate calculations of large numbers",
    "bavix/laravel-wallet-swap": "Addition to the laravel-wallet library for quick setting of exchange rates",
    "bavix/laravel-wallet-vacuum": "Addition to the laravel-wallet library for quick fix race condition"
  },
  "autoload": {
    "psr-4": {
      "Bavix\\Wallet\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Bavix\\Wallet\\Test\\": "tests/"
    }
  },
  "scripts": {
    "metrics": "@php vendor/bin/phpmetrics --config=phpmetrics.json --junit=build/phpunit.junit.xml"
  },
  "extra": {
    "laravel": {
      "providers": [
        "Bavix\\Wallet\\WalletServiceProvider"
      ]
    }
  },
  "config": {
    "sort-packages": true
  }
}
